<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_books_row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/recyclerBooksImageView"
        android:layout_width="110dp"
        android:layout_height="118dp"
        android:layout_marginLeft="1dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/recyclerBooksName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_medium"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:text="Books Name"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/recyclerBooksImageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">
    </TextView>

    <TextView
        android:id="@+id/recyclerAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_medium"
        android:text="Author Name"
        android:textColor="@color/gray"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/recyclerBooksName"
        app:layout_constraintTop_toBottomOf="@+id/recyclerBooksName">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>